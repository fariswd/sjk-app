<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>ADD SJK</h1>
    <form class="" action="" method="post">
      
      <br>Vehicle: 
      <select class="" name="VehicleId">
        <% vehicles.forEach(vehicle=>{ %>
          <% if(vehicle.id == one.Vehicle.id) { %>
            <!-- yang selected -->
            <option value="<%= vehicle.id %>" selected='selected'><%= vehicle.plat_no %>, <%= vehicle.type %>, KM: <%= vehicle.km %></option>
          <% } else { %>
            <!-- yang non selected -->
            <option value="<%= vehicle.id %>"><%= vehicle.plat_no %>, <%= vehicle.type %>, KM: <%= vehicle.km %></option>
          <% } %>
        <% }) %>
      </select>
      
      <br>Driver: <select class="" name="UserId">
        <% drivers.forEach(driver=>{ %>
          <% if(driver.id == one.User.id) { %>
            <!-- yang selected -->
             <option value="<%= driver.id %>" selected='selected'><%= driver.username %></option>
          <% } else { %>
            <!-- yang non selected -->
            <option value="<%= driver.id %>"><%= driver.username %></option>
          <% } %>
        <% }) %>
      </select>
      
      <br>Costumer: <select class="" name="CustomerId">
        <% customers.forEach(customer=>{ %>
          <% if(customer.id == one.Customer.id) { %>
            <!-- yang selected -->
            <option value="<%= customer.id %>" selected='selected'><%= customer.name %> <%= customer.address %></option>
          <% } else { %>
            <!-- yang non selected -->
            <option value="<%= customer.id %>"><%= customer.name %> <%= customer.address %></option>
          <% } %>
        <% }) %>
      </select>
      
      <br>Task: <textarea name="task" rows="8" cols="80"><%= one.task %></textarea>
      
      <br><input type="submit" name="" value="SUBMIT">
    </form>
  </body>
</html>